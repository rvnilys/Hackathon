import boto3, json

bedrock = boto3.client("bedrock-runtime", region_name="us-east-1")

def lambda_handler(event, context):
    body = json.loads(event.get("body") or "{}")
    text = body.get("text", "")

    prompt = f"Translate Manglish to English:\nInput: {text}\nOutput:"

    response = bedrock.invoke_model(
        modelId="meta.llama3-8b-instruct-v1:0",  # change to mistral or deepseek if you enabled them
        contentType="application/json",
        accept="application/json",
        body=json.dumps({
            "prompt": prompt,
            "max_gen_len": 200,
            "temperature": 0.3
        })
    )

    result = json.loads(response["body"].read())

    return {
        "statusCode": 200,
        "body": json.dumps({
            "result": result.get("generation") or result.get("outputs", [{}])[0].get("text", "")
        })
    }
